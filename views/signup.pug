extends homeBase

block content

    main
        .layout
            //-Start of Sign Up
            .main.order-md-2
                .start
                    .container
                        .col-md-12
                            .content
                                h1 Create Account
                                .third-party
                                    button.btn.item.bg-blue
                                        i.material-icons pages
                                    button.btn.item.bg-teal
                                        i.material-icons party_mode
                                    button.btn.item.bg-purple
                                        i.material-icons whatshot
                                p or use your email for registration:
                                form.signup.form--signup
                                    .form-parent
                                        .form-group
                                            input#inputName.form-control(type='text', placeholder='Username', required='')
                                            button.btn.icon
                                            i.material-icons person_outline
                                        .form-group
                                            input#inputEmail.form-control(type='email', placeholder='Email Address', required='')
                                            button.btn.icon
                                            i.material-icons mail_outline
                                    .form-group
                                        input#inputPassword.form-control(type='password', placeholder='Password', required='')
                                        button.btn.icon
                                            i.material-icons lock_outline
                                    .form-group
                                        input#confirmPassword.form-control(type='password', placeholder='Password Confirm', required='')
                                        button.btn.icon
                                            i.material-icons lock_outline
                                    button.btn.button(type='submit') Sign Up
                                    .callout
                                        span
                                            | Already a member? 
                                            a(href='/login') Sign In
            //-End of Sign Up
            //-Start of Sidebar
            .aside.order-md-1
                .container
                    .col-md-12
                        .preference
                            h2 Welcome Back!
                            p To keep connected with your friends please login with your personal info.
                            a.btn.button(href='/login') Sign In
                //-End of Sidebar
                //-Layout